{% extends "layout.mjml" %}

{% block title %}
<mj-title>Activité récente</mj-title>
{% endblock %}

{% block content %}

<mj-section>
  <mj-column>
    <mj-text mj-class="headline">Activité récente</mj-text>
  </mj-column>
</mj-section>

{% if noActions %}
<mj-section>
  <mj-column>
    <mj-text>
      Aucune activité n'a été enregistrée dernièrement.
    </mj-text>
  </mj-column>
</mj-section>
{% endif %}

<mj-section>
  <mj-column>
    <mj-text>
      {% if users.length %}<div><strong>{{ users.length }}</strong> enregistrements</div>{% endif %}
      {% if institutions.length %}<div><strong>{{ institutions.length }}</strong> mises à jour d'établissements</div>{% endif %}
      {% if sushi.length %}<div><strong>{{ sushi.length }}</strong> mises à jour d'identifiants SUSHI </div>{% endif %}
      {% if files.length %}<div><strong>{{ files.length }}</strong> dépôts de fichiers</div>{% endif %}
      {% if insertions.length %}<div><strong>{{ insertions.length }}</strong> chargements</div>{% endif %}
      {% if reportings.length %}<div><strong>{{ reportings.length }}</strong> mises à jour de tâches de reporting</div>{% endif %}
      {% if reportingsSend.length %}<div><strong>{{ reportingsSend.length }}</strong> de tâches de reporting ont été envoyées</div>{% endif %}
    </mj-text>
  </mj-column>
</mj-section>

{% if users.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Enregistrements ({{ users.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th>Nom</th>
          <th>Email</th>
          <th style="width: 140px">Date</th>
          <th style="width: 50px">Statut</th>
        </tr>
      </thead>
      <tbody>
        {% for action in users %}
        <tr style="border-bottom: 1px solid #d0d0d0">
          <td>{{ action.elasticUser.full_name }}</td>
          <td>{{ action.elasticUser.email }}</td>
          <td>{{ action.datetime }}</td>
          <td>{{ action.response.status }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if institutions.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Mises à jour établissements ({{ institutions.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th></th>
          <th>Utilisateur</th>
          <th>Établissement</th>
          <th style="width: 130px">Date</th>
          <th style="width: 50px">Statut</th>
        </tr>
      </thead>
      <tbody>
        {% for action in institutions %}
        <tr style="border-bottom: 1px solid #d0d0d0">
          {% if action.action == 'institutions/create' %}
            <td>+</td>
          {% elif action.action == 'institutions/update' %}
            <td>*</td>
          {% elif action.action == 'institutions/delete' %}
            <td>-</td>
          {% endif %}
          <td>{{ action.user.name }}</td>
          <td>{{ action.metadata.institutionName or action.metadata.institutionId }}</td>
          <td>{{ action.datetime }}</td>
          <td>{{ action.response.status }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if sushi.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Mises à jour d'identifiants SUSHI ({{ sushi.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th></th>
          <th>Utilisateur</th>
          <th>Vendor</th>
          <th style="width: 130px">Date</th>
          <th style="width: 50px">Statut</th>
        </tr>
      </thead>
      <tbody>
        {% for action in sushi %}
          {% if action.action == 'sushi/delete-many' %}
            {% for result in action.metadata.sushiDeleteResult %}
              <tr style="border-bottom: 1px solid #d0d0d0">
                <td>-</td>
                <td>{{ action.user.name }}</td>
                <td>{{ result.vendor or result.id }}</td>
                <td>{{ action.datetime }}</td>
                <td>{{ result.status }}</td>
              </tr>
            {% endfor %}
          {% else %}
          <tr style="border-bottom: 1px solid #d0d0d0">
            {% if action.action == 'sushi/create' %}
              <td>+</td>
            {% elif action.action == 'sushi/update' %}
              <td>*</td>
            {% endif %}
            <td>{{ action.user.name }}</td>
            <td>{{ action.metadata.vendor or action.metadata.sushiId }}</td>
            <td>{{ action.datetime }}</td>
            <td>{{ action.response.status }}</td>
          </tr>
          {% endif %}
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if files.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Dépôts de fichiers ({{ files.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th></th>
          <th>Fichier</th>
          <th style="width: 130px">Date</th>
          <th style="width: 50px">Statut</th>
        </tr>
      </thead>
      <tbody>
        {% for action in files %}
          {% for path in action.path %}
          <tr style="border-bottom: 1px solid #d0d0d0">
            <td>{{ "+" if action.action == 'file/upload' else "-" }}</td>
            <td>{{ path }}</td>
            <td>{{ action.datetime }}</td>
            <td>{{ action.response.status }}</td>
          </tr>
          {% endfor %}
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if insertions.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Chargements ({{ insertions.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th>Utilisateur</th>
          <th>Index</th>
          <th>Insérés</th>
          <th>Mis à jour</th>
          <th>Échecs</th>
          <th style="width: 130px">Date</th>
          <th style="width: 50px">Statut</th>
        </tr>
      </thead>
      <tbody>
        {% for action in insertions %}
        <tr style="border-bottom: 1px solid #d0d0d0">
          <td>{{ action.user.name }}</td>
          <td>{{ action.index }}</td>
          <td>{{ action.response.body.inserted }}</td>
          <td>{{ action.response.body.updated }}</td>
          <td>{{ action.response.body.failed }}</td>
          <td>{{ action.datetime }}</td>
          <td>{{ action.response.status }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if reportings.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Rapports ({{ reportings.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th></th>
          <th>Utilisateur</th>
          <th>Espace</th>
          <th>Tableau de bord</th>
          <th style="width: 130px">Date</th>
        </tr>
      </thead>
      <tbody>
        {% for action in reportings %}
        <tr style="border-bottom: 1px solid #d0d0d0">
          {% if action.action == 'reporting/store' %}
            <td>+</td>
          {% endif %}
          {% if action.action == 'reporting/delete' %}
            <td>-</td>
          {% endif %}
          {% if action.action == 'reporting/update' %}
            <td>*</td>
          {% endif %}
          <td>{{ action.user.name }}</td>
          <td>{{ action.metadata.space }}</td>
          <td>{{ action.metadata.dashboardName }}</td>
          <td>{{ action.datetime }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% if reportingsSend.length %}
<mj-section>
  <mj-column>
    <mj-text mj-class="subheading">
      Rapports envoyé(s) ({{ reportingsSend.length }})
    </mj-text>
    <mj-table cellpadding="5px">
      <thead>
        <tr style="text-align: left; border-bottom: 1px solid #d0d0d0">
          <th>Espace</th>
          <th>Tableau de bord</th>
          <th style="width: 130px">Date</th>
        </tr>
      </thead>
      <tbody>
        {% for report in reportingsSend %}
        <tr style="border-bottom: 1px solid #d0d0d0">
          <td>{{ report.space }}</td>
          <td>{{ report.dashboardName }}</td>
          <td>{{ report.sentAt }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
{% endif %}

{% endblock %}
