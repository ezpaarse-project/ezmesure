module: satosa.frontends.openid_connect.OpenIDConnectFrontend
name: OIDC
config:
  signing_key_path: /etc/satosa/certs/oidc.key
  signing_key_id: /etc/satosa/certs/oidc.key1


  client_db_path: /etc/satosa/cdb.json

  sub_hash_salt: randomSALTvalue

  provider:
    client_registration_supported: Yes
    response_types_supported: ["code", "id_token token"]
    subject_types_supported: ["pairwise"]
    scopes_supported: ["openid", "profile", "email"]
    id_token_lifetime: 3600
